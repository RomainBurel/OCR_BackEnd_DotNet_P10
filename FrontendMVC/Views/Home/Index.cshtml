@{
    ViewData["Title"] = "Accueil";
}

<h2>Bienvenue sur MediLabo</h2>

<p>
    @if (User.Identity.IsAuthenticated)
    {
        <a asp-controller="Patients" asp-action="Index" class="btn btn-primary">Voir la liste des patients</a>
    }
    else
    {
        <a asp-controller="Account" asp-action="Login" class="btn btn-primary">Se connecter</a>
    }
</p>
