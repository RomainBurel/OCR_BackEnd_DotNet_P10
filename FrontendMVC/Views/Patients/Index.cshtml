@using PatientsAPI_SharedModels
@model List<PatientModel>

<h2>Liste des patients</h2>

<a asp-controller="Patients" asp-action="Create" class="btn btn-success">Ajouter un patient</a>
<br />
<table class="patients-list">
    <tr>
        <th>Nom</th>
        <th>Prénom</th>
        <th>Date de naissance</th>
        <th>Adresse</th>
        <th>Téléphone</th>
        <th colspan="3">Actions</th>
    </tr>
    @foreach (var patient in Model)
    {
        <tr>
            <td>@patient.LastName</td>
            <td>@patient.FirstName</td>
            <td>@patient.DateOfBirth.ToShortDateString()</td>
            <td>@patient.Address</td>
            <td>@patient.PhoneNumber</td>
            <td><a asp-controller="Patients" asp-action="Details" asp-route-id="@patient.PatientId" class="btn btn-primary">Détails</a></td>
			<td><a asp-controller="Patients" asp-action="Update" asp-route-id="@patient.PatientId" class="btn btn-warning">Modifier</a></td>
            <td>
                <form asp-controller="Patients" asp-action="Delete" asp-route-Id="@patient.PatientId" method="post" onsubmit="return confirm('Voulez-vous vraiment supprimer ce patient ?');">
                <button type="submit" class="btn btn-danger">Supprimer</button>
                </form>
            </td>
        </tr>
    }
</table>
